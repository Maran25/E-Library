<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <style>
    .card {
      text-align: center;
      margin: 30px;
    }

    img {
      height: 200px;
      margin-bottom: 10px;
    }

    .fieldSpan {
      color: rgb(32, 32, 32);
      font-weight: 500;
    }

    body {
      background-color: #eee;
    }

    nav {
      border-bottom: 5px solid rgb(174, 2, 174);
    }
  </style>
  <title>E-Library</title>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar sticky-top bg-light p-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><i class="fa-solid fa-book"></i> Online Library</a>

      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Active</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">Disabled</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Book List -->
  <div class="container">
    <div class="row justify-content-center">

      <%  books.forEach(function(book){ %>

      <div class="cart card col-3 pt-4">
        <div class="card-image">
          <img class="cartImage"
            src="https://imgs.search.brave.com/pB3k1GiFEqL1FLddLRckfsSfP9F5keJf0kiaO5uOqe8/rs:fit:1182:1200:1/g:ce/aHR0cHM6Ly9oYWNo/ZXR0ZS5pbWdpeC5u/ZXQvYm9va3MvOTc4/MDc0OTkyODU3NS5q/cGc_YXV0bz1jb21w/cmVzcyxmb3JtYXQ"
            alt="">
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= book.name %>  </h4>
          <hr>
          <div class="d-flex justify-content-between">
            <span class="fieldSpan">Book Id</span> <span><%= book.bookid %> </span>
          </div>
          <div class="d-flex justify-content-between">
            <span class="fieldSpan">Author</span> <span><%= book.author %> </span>
          </div>
          <div class="d-flex justify-content-between">
            <span class="fieldSpan">Field</span> <span><%= book.genre %> </span>
          </div>
        </div>
      </div>

      <% }) %>

      
    </div>
  </div>
</body>

</html>